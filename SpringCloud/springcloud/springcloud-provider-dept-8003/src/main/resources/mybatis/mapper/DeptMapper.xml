<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jokerdig.springcloud.mapper.DeptMapper">
    <insert id="addDept" parameterType="Dept">
        insert into db03.dept(dname,db_source) values(#{dname},DATABASE())
    </insert>
    <select id="queryById" parameterType="Long" resultType="Dept">
        select * from db03.dept where deptno = #{deptno}
    </select>
    <select id="queryAll" resultType="Dept">
        select * from db03.dept
    </select>
</mapper>